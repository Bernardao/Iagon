{# src/Cupon/CiudadBundle/Resources/views/Default/recientes.rss.twig #}
{% extends '::base.rss.twig' %}

{% block title %}
    {% spaceless %}Iagon - Ofertas recientes{% endspaceless %}
{% endblock %}
{% block url %}
    {% spaceless %}{{ url('ciudad_recientes', { 'ciudad': ciudad.slug }) }}{% endspaceless %}
{% endblock %}
{% block descripcion %}
    {% spaceless %}Las ofertas más recientes en {{ ciudad.nombre }}{% endspaceless %}
{% endblock %}
{% block self %}
    {% spaceless %}{{ url('ciudad_recientes', { 'ciudad': ciudad.slug, '_format': 'rss' }) }}{% endspaceless %}
{% endblock %}

{% block items %}
    <!-- Repetir lo siguiente para cada oferta incluida -->

    {% for oferta in ofertas %}
        {% set urlAbsolutaFoto = 'http://' ~ app.request.server.get('SERVER_NAME') ~ asset(directorio_imagenes ~ oferta.foto) %}

        <item>
            <title>{{ oferta.nombre }}</title>
            <link>{{ url('oferta', { 'ciudad': oferta.ciudad.slug, 'slug': oferta.slug }) }}</link>
            <description>
                <![CDATA[
                    <img alt="" src"{{ urlAbsolutaFoto }}"/>
                    {{ oferta.descripcion | mostrar_como_lista }}

                            <a href="#">Comprar</a>
                ]]>
            </description>
            <pubDate>{{ oferta.fechaPublicacion | date('r') }}</pubDate>
            <guid>{{ url('oferta', { 'ciudad': oferta.ciudad.slug, 'slug': oferta.slug }) }}</guid>
        </item>
        <!-- Fin de la repetición -->
    {% endfor %}
{% endblock %}
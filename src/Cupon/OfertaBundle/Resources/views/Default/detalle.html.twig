{# /src/Cupon/OfertaBundle/Resources/views/Default/detalle.html.twig #}
{% extends '::frontend.html.twig' %}

{% block title %}
    Detalles de {{ oferta.nombre }}
{% endblock %}

{% block id 'oferta' %}
        
{% block article %}
    {% include 'OfertaBundle:Default:includes/oferta.html.twig' %}
{% endblock %}

{% block aside %}
    ## FORMULARIO DE LOGIN ##
    <section id="nosotros">
        <h2>Sobre nosotros</h2>
        <p>Lorem ipsum dolor sit amet...</p>
    </section>
    {{ parent() }}
    <section id="relacionadas">
        <h2>Ofertas en otras ciudades</h2>
        <ul>
            {% for oferta in relacionadas %}
                <li>
                    {{ oferta.ciudad.nombre }}: 
                    <a href="{{ path('oferta', {'ciudad': oferta.ciudad.slug, 'slug': oferta.slug }) }}">
                        {{ oferta.nombre }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    </section>

{% endblock %}
{# app/Resources/views/frontend.html.twig #}
{% extends '::base.html.twig' %}

{% set ciudadSeleccionada = app.request.attributes.has('ciudad')
            ? app.request.attributes.get('ciudad')
                : ciudad_por_defecto
 %}

{% block stylesheets %}
    <link href="{{ asset('bundles/oferta/css/normalizar.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('bundles/oferta/css/comun.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('bundles/oferta/css/frontend.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}
    
{% block javascripts %}
    
{% endblock %}

{% block body %}
    <header>
        <h1><a href="{{ path('portada', { 'ciudad': ciudadSeleccionada }) }}">CUPON</a></h1>
        <nav>
            <ul>
                <li><a href="{{ path('portada', { 'ciudad': ciudadSeleccionada }) }}">{{ "Oferta del d√≠a" | trans }}</a></li>
                <li><a href="{{ path('ciudad_recientes', { 'ciudad': ciudadSeleccionada }) }}">{{ "Ofertas recientes" | trans }}</a></li>
                <li><a href="{{ path('usuario_compras', { 'ciudad': ciudadSeleccionada }) }}#">{{ "Mis ofertas" | trans }}</a></li>
                
                <li>{% render "CiudadBundle:Default:listaCiudades"
                        with { 'ciudad': ciudadSeleccionada } %}</li>
            </ul>
        </nav>
    </header>
    <article>
        {% block article %}{% endblock %}
    </article>
    <aside>
        {% block aside %}{% endblock %}
    </aside>
{% endblock %}
            